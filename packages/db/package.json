{
  "name": "@mac/db",
  "version": "0.0.1",
  "private": true,
  "description": "Masala and Curry API.",
  "keywords": [],
  "license": "GPL-2.0-only",
  "author": "Prabhu K H",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./src/schemas/index.ts",
      "default": "./src/schemas/index.ts"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./src/types.ts",
      "default": "./src/types.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "clean": "git clean -xdf dist .cache .turbo node_modules",
    "dev": "tsc",
    "generate": "drizzle-kit generate",
    "lint": "oxlint . --tsconfig ./tsconfig.json",
    "lint:fix": "oxlint . --fix --tsconfig ./tsconfig.json",
    "studio": "dotenvx run -- drizzle-kit studio"
  },
  "dependencies": {
    "@hono/zod-openapi": "catalog:api",
    "@mac/resources": "workspace:*",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "^0.8.2",
    "nanoid": "catalog:"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.49.0",
    "@libsql/client": "^0.15.15",
    "@mac/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "drizzle-kit": "^0.31.4",
    "oxlint": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.15.1"
}
