{
  "name": "@mac/db",
  "version": "0.0.2",
  "private": true,
  "description": "Masala and Curry API.",
  "keywords": [],
  "license": "GPL-2.0-only",
  "author": "Prabhu K H",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./src/schemas/index.ts",
      "default": "./src/schemas/index.ts"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./src/types.ts",
      "default": "./src/types.ts"
    }
  },
  "scripts": {
    "build": "tsgo",
    "check-types": "tsgo --noEmit",
    "clean": "git clean -xdf dist .cache .turbo node_modules",
    "dev": "tsgo",
    "generate": "drizzle-kit generate",
    "lint": "oxlint . --type-aware  --tsconfig ./tsconfig.json",
    "lint:fix": "oxlint . --type-aware  --fix --tsconfig ./tsconfig.json",
    "studio": "dotenvx run -- drizzle-kit studio"
  },
  "dependencies": {
    "@hono/zod-openapi": "catalog:backend",
    "@mac/resources": "workspace:*",
    "drizzle-orm": "catalog:backend",
    "drizzle-zod": "^0.8.3",
    "nanoid": "catalog:"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@libsql/client": "^0.15.15",
    "@mac/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
    "drizzle-kit": "^0.31.6",
    "oxlint": "catalog:",
    "oxlint-tsgolint": "catalog:"
  },
  "packageManager": "pnpm@10.20.0"
}
