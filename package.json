{
  "name": "masala-and-curry",
  "version": "0.0.2",
  "private": true,
  "description": "Experience the rich flavors of authentic Indian and Nepalese cuisine. Traditional recipes, fresh ingredients, and exceptional taste.",
  "keywords": [
    "masala",
    "curry",
    "spices",
    "flavors",
    "cooking",
    "recipes",
    "indian cuisine",
    "culinary"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/25prabhu10/masala-and-curry.git"
  },
  "license": "GPL-2.0-only",
  "author": "Prabhu K H",
  "scripts": {
    "android": "pnpm --filter @mac/mobile run android",
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "clean": "git clean -xdf node_modules .turbo",
    "clean:ws": "turbo run clean",
    "dev": "turbo watch dev --continue",
    "format": "ultracite fix && prettier \"**/*.md\" --write --ignore-unknown",
    "format:fix": "biome check --fix --formatter-enabled=false --linter-enabled=false .",
    "postinstall": "pnpm lint:ws",
    "knip": "knip",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:ws": "pnpm dlx sherif@latest"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.3",
    "@typescript/native-preview": "catalog:",
    "knip": "^5.67.1",
    "lefthook": "^2.0.2",
    "oxlint": "catalog:",
    "oxlint-tsgolint": "catalog:",
    "prettier": "^3.6.2",
    "turbo": "latest",
    "ultracite": "6.2.1"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22.17.0",
    "pnpm": ">=10.12.4"
  }
}
