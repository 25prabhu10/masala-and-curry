{
  "name": "@mac/server",
  "version": "0.0.1",
  "private": true,
  "description": "Masala and Curry API.",
  "keywords": [],
  "license": "GPL-2.0-only",
  "author": "Prabhu K H",
  "exports": {
    "./routes": "./src/routes/index.ts",
    "./types": "./src/lib/types.ts"
  },
  "scripts": {
    "build": "wrangler deploy --dry-run --outdir dist",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "check-types": "tsc --noEmit",
    "clean": "git clean -xdf dist .cache .turbo .wrangler node_modules",
    "db:migrate": "wrangler d1 migrations apply mac-dev --local",
    "deploy": "wrangler deploy --minify",
    "dev": "wrangler dev",
    "lint": "oxlint . --tsconfig ./tsconfig.json",
    "lint:fix": "oxlint . --fix --tsconfig ./tsconfig.json",
    "test": "vitest"
  },
  "dependencies": {
    "@hono/zod-openapi": "catalog:api",
    "@mac/db": "workspace:*",
    "@mac/repository": "workspace:*",
    "@mac/resources": "workspace:*",
    "@mac/validators": "workspace:*",
    "@scalar/hono-api-reference": "^0.9.15",
    "better-auth": "catalog:api",
    "hono": "catalog:api",
    "nanoid": "catalog:"
  },
  "devDependencies": {
    "@mac/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "oxlint": "catalog:",
    "typescript": "catalog:",
    "vitest": "^3.2.4",
    "wrangler": "^4.32.0"
  },
  "packageManager": "pnpm@10.15.0"
}
