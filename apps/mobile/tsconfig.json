{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleSuffixes": [".ios", ".android", ".native", ""],
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./assets/*"]
    },
    "typeRoots": ["../../node_modules/@types", "./types"],
    "types": ["nativewind/types"]
  },
  "exclude": [".expo", "babel.config.js", "metro.config.js"],
  "extends": "@mac/tsconfig/expo.json",
  "include": [
    "src",
    "*.ts",
    "*.tsx",
    "*.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
